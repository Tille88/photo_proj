{
    "env": {
        "browser": true,
				"node": true,
				"es6": true
    },
    "extends": ["eslint:recommended", "google"],
    "rules": {
      "indent": ["error", "tab"],
      "linebreak-style": ["error", "unix"],
      "semi": ["error", "always"],
      "no-cond-assign": ["error", "always"],
      "no-console": "off",
      "no-var": "off",
      "no-trailing-spaces": "error",
			"quotes": "off",
			"no-tabs": "off"
	},
	"parserOptions": {
		"sourceType": "module"
	}
}